<Window x:Class="AutoWand.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoWand"
        mc:Ignorable="d"
        Title="Cart - AutoWand" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Grid.Row="1" Content="Customer: "/>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3">
            <Label Content="Year:"/>
            <TextBox Height="22" Width="50" x:Name="YearEntry" Margin="0,0,10,0"/>
            <Label Content="Make:"/>
            <TextBox Height="22" Width="100" x:Name="MakeEntry" Margin="0,0,10,0"/>
            <Label Content="Model:"/>
            <TextBox Height="22" Width="100" x:Name="ModelEntry" Margin="0,0,10,0"/>
            <Label Content="Trim:"/>
            <TextBox Height="22" Width="50" x:Name="TrimEntry"/>
        </StackPanel>
        <Label Grid.Column="1" Grid.Row="3" Content="Services" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Label Grid.Column="3" Grid.Row="3" Content="Cart" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <ListView Grid.Column="1" Grid.Row="4" Grid.RowSpan="8" x:Name="ServicesListView">
            <ListView.ContextMenu>
                <!--Menu for ListView-->
                <ContextMenu>
                    <MenuItem Header="Add to Cart" Click="AddToCart"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <ListView Grid.Column="3" Grid.Row="4" Grid.RowSpan="8" x:Name="CartListView">
            <ListView.ContextMenu>
                <!--Menu for ListView-->
                <ContextMenu>
                    <MenuItem Header="Remove from Cart" Click="RemoveFromCart"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <Grid Grid.Column="3" Grid.Row="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" Content="Item Total:"/>
            <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" Content="Tax:"/>
            <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" Content="Total:"/>
        </Grid>

        <Button Grid.Column="2" Grid.Row="7" Content="Add to Cart" Width="130" Height="30" Click="AddToCart"/>
        <Button Grid.Column="2" Grid.Row="8" Content="Remove from Cart" Width="130" Height="30" Click="RemoveFromCart"/>

        <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="13" HorizontalAlignment="Right">
            <Button Width="120" Height="22" Content="Continue" Margin="0,0,10,0"/>
            <Button Width="120" Height="22" Content="Cancel" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
